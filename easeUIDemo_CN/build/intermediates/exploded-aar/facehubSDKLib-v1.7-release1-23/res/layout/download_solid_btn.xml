<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.azusasoft.facehubcloudsdk.views.viewUtils.RadiusLayout
        android:id="@+id/download_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_radius="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/download_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/download_white"
                />
            <TextView
                android:id="@+id/download_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:text="下载"
                />
        </LinearLayout>

        <!-- 进度条 -->
        <RelativeLayout
            android:id="@+id/progress_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <com.azusasoft.facehubcloudsdk.views.viewUtils.CollectProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/cancel_download"
                android:layout_height="3dp"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/cancel_download"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/download_cancel"
                />
        </RelativeLayout>

    </com.azusasoft.facehubcloudsdk.views.viewUtils.RadiusLayout>
</FrameLayout>