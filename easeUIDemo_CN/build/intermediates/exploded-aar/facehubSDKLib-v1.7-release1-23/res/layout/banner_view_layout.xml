<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.azusasoft.facehubcloudsdk.views.viewUtils.ResizablePager
        android:id="@+id/banner_pager_facehub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:id="@+id/nav_dot_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">
        <com.azusasoft.facehubcloudsdk.views.viewUtils.HorizontalListView
            android:id="@+id/dot_nav_facehub"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</LinearLayout>