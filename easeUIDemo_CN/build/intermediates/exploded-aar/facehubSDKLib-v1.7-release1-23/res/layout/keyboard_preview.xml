<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="@dimen/keyboard_preview_frame_width"
        android:layout_height="@dimen/keyboard_preview_frame_height">

        <ImageView
            android:id="@+id/preview_bubble"
            android:layout_width="@dimen/keyboard_preview_frame_width"
            android:layout_height="@dimen/keyboard_preview_frame_height"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/preview_frame_center"
            />

        <com.azusasoft.facehubcloudsdk.views.viewUtils.GifViewFC
            android:id="@+id/preview_image"
            android:layout_width="@dimen/keyboard_preview_image_size"
            android:layout_height="@dimen/keyboard_preview_image_size"
            android:layout_marginTop="6dp"
            android:layout_gravity="top|center_horizontal"
            />
    </FrameLayout>
</FrameLayout>