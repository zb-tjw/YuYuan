<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/facehub_background"
        >
        <com.azusasoft.facehubcloudsdk.views.viewUtils.ResizablePager
            android:id="@+id/emoticon_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyboard_margin"
            android:layout_marginBottom="@dimen/keyboard_margin"
            />
        <com.azusasoft.facehubcloudsdk.views.KeyboardPageNav
            android:id="@+id/keyboard_page_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/facehub_background"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/keyboard_list_nav_height"
            android:orientation="horizontal">
            <include
                android:id="@+id/add_list"
                layout="@layout/keyboard_list_nav_item"
                >
            </include>
            <com.azusasoft.facehubcloudsdk.views.viewUtils.HorizontalListView
                android:id="@+id/list_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/white_background_top_frame"
                android:layout_marginLeft="-1dp"
                />
            <TextView
                android:id="@+id/send_btn"
                android:layout_width="@dimen/keyboard_list_nav_width"
                android:layout_height="@dimen/keyboard_list_nav_height"
                android:background="@color/send_btn_color_disabled"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="15sp"
                android:text="发送"
                android:visibility="visible"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>