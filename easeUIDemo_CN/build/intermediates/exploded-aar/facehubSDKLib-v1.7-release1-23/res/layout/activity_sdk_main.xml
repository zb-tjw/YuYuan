<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.SDKMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" />
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<Button-->
                    <!--android:id="@+id/jump_to_more"-->
                    <!--style="@style/demo_btn"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:text="显示更多" />-->

                <Button
                    android:id="@+id/jump_to_keyboard"
                    style="@style/demo_btn"
                    android:layout_width="match_parent"
                    android:text="显示键盘" />

                <Button
                    android:id="@+id/sync"
                    style="@style/demo_btn"
                    android:layout_width="match_parent"
                    android:text="同步用户数据" />

                <Button
                    android:id="@+id/copy_db"
                    style="@style/demo_btn"
                    android:layout_width="match_parent"
                    android:text="导出数据库" />

                <Button
                    android:id="@+id/jump_to_store"
                    style="@style/demo_btn"
                    android:layout_width="match_parent"
                    android:text="显示商店"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/jump_to_manage_list"
                    style="@style/demo_btn"
                    android:layout_width="match_parent"
                    android:text="显示列表编辑"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/jump_to_manage"
                    style="@style/demo_btn"
                    android:layout_width="match_parent"
                    android:text="显示编辑"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btn_get_banner"
                    style="@style/demo_btn"
                    android:text="拉取banner"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/get_tags_by_param"
                    style="@style/demo_btn"
                    android:text="自定义参数拉tags"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/get_tags_by_section"
                    style="@style/demo_btn"
                    android:text="section拉tags"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/get_pkgs_by_param"
                    style="@style/demo_btn"
                    android:text="自定义param拉取packages"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/get_pkgs_by_section"
                    style="@style/demo_btn"
                    android:text="section拉packages"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/get_pkg_detail"
                    style="@style/demo_btn"
                    android:text="拉取包详情"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/collect_emo"
                    style="@style/demo_btn"
                    android:text="收藏表情"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/collect_pkg_2new"
                    style="@style/demo_btn"
                    android:text="收藏包到新列表"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/collect_pkg"
                    style="@style/demo_btn"
                    android:text="收藏包到已有列表"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/get_emo"
                    style="@style/demo_btn"
                    android:text="拉取单个表情"
                    android:visibility="gone" />

                <!--<Button-->
                    <!--android:id="@+id/get_user_list"-->
                    <!--style="@style/demo_btn"-->
                    <!--android:text="拉取个人列表" />-->

                <!--<Button-->
                    <!--android:id="@+id/remove_emos"-->
                    <!--style="@style/demo_btn"-->
                    <!--android:text="批量删除" />-->

                <Button
                    android:id="@+id/remove_emo"
                    style="@style/demo_btn"
                    android:text="删除单个表情"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/create_list"
                    style="@style/demo_btn"
                    android:text="新建列表"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/rename_list"
                    style="@style/demo_btn"
                    android:text="重命名列表"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/delete_list"
                    style="@style/demo_btn"
                    android:text="删除列表"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/move_emo"
                    style="@style/demo_btn"
                    android:text="移动表情"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/remove_all"
                    style="@style/demo_btn"
                    android:text="删除全部"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</RelativeLayout>
