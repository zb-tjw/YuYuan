<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="@dimen/keyboard_list_nav_width"
        android:layout_height="@dimen/keyboard_list_nav_height"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <com.azusasoft.facehubcloudsdk.views.viewUtils.ResizableImageView
                    android:id="@+id/back_hole"
                    android:layout_width="@dimen/keyboard_list_cover_size"
                    android:layout_height="@dimen/keyboard_list_cover_size"
                    app:resize_by_width="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/white_ball_with_frame"
                    android:layout_gravity="center"
                    />
                <com.azusasoft.facehubcloudsdk.views.viewUtils.SpImageView
                    android:id="@+id/float_list_cover"
                    android:layout_width="@dimen/keyboard_list_cover_size"
                    android:layout_height="@dimen/keyboard_list_cover_size"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    />
                <com.azusasoft.facehubcloudsdk.views.viewUtils.ResizableImageView
                    android:id="@+id/favor_icon"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:resize_by_width="true"
                    android:src="@drawable/emo_keyboard_default_cover"
                    android:visibility="gone"
                    />
                <com.azusasoft.facehubcloudsdk.views.viewUtils.ResizableImageView
                    android:id="@+id/local_emo_icon"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:resize_by_width="true"
                    android:src="@drawable/local_face_cover"
                    android:visibility="gone"
                    />
            </FrameLayout>

            <ImageView
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@color/keyboard_list_divider"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/top_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#e9e9e9"
            android:layout_gravity="top"
            />
    </FrameLayout>
</FrameLayout>