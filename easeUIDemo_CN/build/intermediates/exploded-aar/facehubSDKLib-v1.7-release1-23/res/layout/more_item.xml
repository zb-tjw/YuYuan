<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91.0dp"
        android:layout_marginBottom="8.0dp"
        android:layout_marginLeft="12.0dp"
        android:layout_marginRight="12.0dp"
        android:layout_marginTop="8.0dp"
        android:background="@drawable/radius_rectangle_with_frame"
        android:paddingLeft="8dp">

        <com.azusasoft.facehubcloudsdk.views.viewUtils.RadiusLayout
            android:id="@+id/left0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            app:layout_radius="5dp">

            <com.azusasoft.facehubcloudsdk.views.viewUtils.SpImageView
                android:id="@+id/cover_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </com.azusasoft.facehubcloudsdk.views.viewUtils.RadiusLayout>

        <LinearLayout
            android:id="@+id/center0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/divider"
            android:layout_toRightOf="@+id/left0"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/list_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:text="包名"
                android:textColor="@color/more_package_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/list_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="2"
                android:text="表情包详细介绍啦啦啦啦啦"
                android:textColor="@color/more_package_subtitle"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/download_btn_area"
            android:src="#ffe0e0e0" />

        <com.azusasoft.facehubcloudsdk.views.viewUtils.DownloadFrameBtn
            android:id="@+id/download_btn_area"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />

