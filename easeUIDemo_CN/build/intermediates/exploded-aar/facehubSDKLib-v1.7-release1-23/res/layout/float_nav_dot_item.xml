<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/dot_img_unselected"
        android:layout_width="@dimen/keyboard_dot_height"
        android:layout_height="@dimen/keyboard_dot_height"
        android:layout_marginLeft="@dimen/keyboard_dot_margin"
        android:layout_marginRight="@dimen/keyboard_dot_margin"
        android:src="@drawable/keyboard_dot_unselected"
        />

    <ImageView
        android:id="@+id/dot_img_selected"
        android:layout_width="@dimen/keyboard_dot_height"
        android:layout_height="@dimen/keyboard_dot_height"
        android:layout_marginLeft="@dimen/keyboard_dot_margin"
        android:layout_marginRight="@dimen/keyboard_dot_margin"
        android:src="@drawable/keyboard_dot_selected"
        android:visibility="gone"
        />
</FrameLayout>