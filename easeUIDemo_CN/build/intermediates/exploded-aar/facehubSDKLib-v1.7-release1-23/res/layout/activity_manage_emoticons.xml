<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.azusasoft.facehubcloudsdk.views.viewUtils.FacehubActionbar
            android:id="@+id/actionbar_facehub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!--<GridView-->
        <!--android:id="@+id/emoticon_manage_grid_facehub"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:numColumnsNormal="5"-->
        <!--/>-->
        <com.azusasoft.facehubcloudsdk.views.advrecyclerview.RecyclerViewEx
            android:id="@+id/emoticon_manage_grid_facehub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <FrameLayout
            android:id="@+id/bottom_bar_facehub"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/facehub_color"
            android:layout_gravity="bottom"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/emoticons_count_facehub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="13dp"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/selected_count_facehub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_gravity="end"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:textSize="13sp"
                />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottom_bar_sync"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/facehub_color"
            android:layout_gravity="bottom"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/sync_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="13dp"
                android:textSize="13sp"
                android:text="你有表情未同步"
                />
            <TextView
                android:id="@+id/sync_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_gravity="end"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:textSize="13sp"
                android:text="同步"
                />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mode_dialog_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <View
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"
            />
        <LinearLayout
            android:id="@+id/mode_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/facehub_background"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <TextView
                android:id="@+id/order_btn"
                style="@style/mode_chose_btn"
                android:text="表情排序"
                />
            <TextView
                android:id="@+id/edit_btn"
                style="@style/mode_chose_btn"
                android:text="编辑列表"
                />
            <TextView
                android:id="@+id/cancel_btn"
                style="@style/mode_chose_btn"
                android:layout_marginTop="5dp"
                android:text="取消"
                />
        </LinearLayout>
    </FrameLayout>

    <com.azusasoft.facehubcloudsdk.views.viewUtils.FacehubAlertDialog
        android:id="@+id/alert_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</FrameLayout>
