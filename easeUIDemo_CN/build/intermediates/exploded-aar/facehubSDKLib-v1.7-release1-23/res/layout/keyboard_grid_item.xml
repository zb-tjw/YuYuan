<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    >
    <FrameLayout
        android:id="@+id/back_frame"
        android:layout_width="@dimen/keyboard_grid_item_width"
        android:layout_height="@dimen/keyboard_grid_item_width"
        android:padding="@dimen/keyboard_grid_item_padding"
        android:layout_gravity="center"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/radius_rectangle_grey"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/click_area"
        android:layout_width="@dimen/keyboard_grid_item_width"
        android:layout_height="@dimen/keyboard_grid_item_width"
        android:padding="6dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/radius_rectangle_white"
            />
        <com.azusasoft.facehubcloudsdk.views.viewUtils.SpImageView
            android:id="@+id/grid_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/add_cross"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/keyboard_grid_add"
            android:layout_gravity="center"
            android:visibility="gone"
            />
    </FrameLayout>
</FrameLayout>