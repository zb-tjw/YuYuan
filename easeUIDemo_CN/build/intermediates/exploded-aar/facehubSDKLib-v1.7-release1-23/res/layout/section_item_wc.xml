<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="@dimen/section_padding_wc"
        android:paddingRight="@dimen/section_padding_wc"
        >

        <com.azusasoft.facehubcloudsdk.views.viewUtils.RadiusLayout
            android:id="@+id/left0"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_centerVertical="true"
            app:layout_radius="11dp">

            <com.azusasoft.facehubcloudsdk.views.viewUtils.SpImageView
                android:id="@+id/cover_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@android:color/white"
                />
        </com.azusasoft.facehubcloudsdk.views.viewUtils.RadiusLayout>

        <LinearLayout
            android:id="@+id/center0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/download_btn_area"
            android:layout_toRightOf="@+id/left0"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="包名"
                android:textColor="@color/more_package_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/list_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="表情包详细介绍啦啦啦啦啦"
                android:textColor="@color/more_package_subtitle"
                android:textSize="12sp" />
        </LinearLayout>


        <com.azusasoft.facehubcloudsdk.views.viewUtils.DownloadFrameBtn
            android:id="@+id/download_btn_area"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            />

